---
const {title, text, img, id, color} = Astro.props
---
<div class="container" id={id} style={{borderTop: `5px solid ${color}`}}>
    <div class="content" >

        <h3>
            {title}
        </h3>
        <p>
            {text}
        </p>
    </div>
    <img src={img.src.src} alt={img.alt} width="40" height="40"/>
</div>
<style>
    .container {
        display: flex;
        flex-direction: column;
        justify-content: center;
        align-items: end;
        width:300px;
        height: 240px;
        box-sizing: border-box;
        padding: 1.5rem;
        border-radius: 5px 5px 10px 10px;
        gap: 2rem;
        box-shadow: -1px 1px 30px #00000022;
    }
    .container h3{
        color: hsl(234, 12%, 34%);
        margin: 0;
        padding: 0;
        font-size: 1.1rem;
    }
    .container p{
        color: hsl(229, 6%, 66%);
        font-size: clamp(0.8rem, 1rem + 1vw, 0.9rem);
        margin: 0;
        padding: 0;
        line-height: 1.5rem;
    }
    .container img{
        float: left;
    }
    .content {
        width: 100%;
        display: flex;
        flex-direction: column  ;
        gap: 0.5rem;
    }
    @media (min-width: 768px){
    
        #card1{
            grid-row: span 2 / span 2;
        
                }
                #card3{
                    grid-column-start: 2;
                    grid-row-start: 2;
                }
                #card4{
                    grid-column-start: 3;
                    grid-row: span 2 / span 2;
                }
    }
</style>